# Database Configuration
# SECURITY: Use strong, unique credentials in production
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_strong_password_here
POSTGRES_DB=network_bot
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# Telegram Bot Token
# Get from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Google Gemini API Key
# Get from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# OSINT: Tavily AI Search (Better for agents)
# Get free key (1000/mo): https://tavily.com/
TAVILY_API_KEY=tvly-xxxxxxxxxxxxxxxxx

# Notion Integration
NOTION_API_KEY=secret_xxxxxxxxxxxxxxxxx
NOTION_DATABASE_ID=xxxxxxxxxxxxxxxxx

# Google Sheets Integration
# Path to service account JSON key file
GOOGLE_PROJ_ID=your_google_project_id
GOOGLE_PRIVATE_KEY_ID=your_private_key_id
GOOGLE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
GOOGLE_CLIENT_EMAIL=service-account@project.iam.gserviceaccount.com
GOOGLE_SHEET_ID=xxxxxxxxxxxxxxxxx

# ============================================
# Payment: YooKassa
# Get credentials at: https://yookassa.ru/
# ============================================
YOOKASSA_SHOP_ID=
YOOKASSA_SECRET_KEY=

# ============================================
# Payment: CardPay/Unlimint (optional)
# ============================================
CARDPAY_API_KEY=
CARDPAY_MERCHANT_ID=

# ============================================
# Telegram Payments
# Get provider token from @BotFather -> Payments
# Leave empty to use Telegram Stars only
# ============================================
TELEGRAM_PAYMENT_PROVIDER_TOKEN=

# ============================================
# Subscription Pricing
# ============================================
SUBSCRIPTION_PRICE_RUB=990
SUBSCRIPTION_PRICE_STARS=500

# ============================================
# Admin Configuration
# Comma-separated Telegram user IDs
# ============================================
ADMIN_TELEGRAM_IDS=123456789

# ============================================
# Production: Domain & Webhooks
# ============================================
APP_DOMAIN=bot.yourdomain.com
WEBHOOK_URL=https://bot.yourdomain.com
WEBHOOK_SECRET=your_random_webhook_secret_here
